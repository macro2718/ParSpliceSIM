<?xml version='1.0' encoding='utf-8'?>
<analysis_config>
    <!-- analyze_simulation_data.py 用 解析設定ファイル -->

    <!-- 生データの場所（ディレクトリを指定。タイムスタンプ依存なし） -->
    <input>
        <!-- 例: results/parsplice_20250912_224403 -->
        <raw_data_dir>results/vst-parsplice_20251008_023729</raw_data_dir>
        <!-- 任意: JSONファイル名（絶対パス/相対パス/ファイル名）。
             相対やファイル名のみの場合は raw_data_dir と結合して解決します。 -->
        <!-- <raw_data_file>raw_simulation_data_parsplice_20250912_202932.json</raw_data_file> -->
        <options>
            <!-- ijson による逐次解析を有効化（未インストール時は自動フォールバック） -->
            <streaming_parse>true</streaming_parse>
        </options>
    </input>

    <!-- 出力ディレクトリ（省略可。未指定なら自動生成: raw_data_dir 配下に analysis_YYYYMMDD_HHMMSS） -->
    <output>
        <!-- <dir>results/parsplice_20250912_224403/analysis_custom</dir> -->
    </output>

    <!-- 生成する解析ファイルの制御（true/false） -->
    <outputs>
        <!-- 単一コンテナで全出力を制御（グラフ/アニメーション/サマリ） -->
        <!-- グラフ（線形X） -->
        <trajectory_evolution>true</trajectory_evolution>
        <trajectory_efficiency>true</trajectory_efficiency>
        <!-- グラフ（対数X） -->
        <trajectory_graph_logx>true</trajectory_graph_logx>
        <trajectory_efficiency_logx>true</trajectory_efficiency_logx>
        <trajectory_efficiency_logx_fit>true</trajectory_efficiency_logx_fit>
        <!-- total_value 系グラフ -->
        <total_value_per_worker>true</total_value_per_worker>
        <combined_value_efficiency>true</combined_value_efficiency>
        <total_value_moving_avg>true</total_value_moving_avg>
        <combined_moving_avg>true</combined_moving_avg>
        <!-- 行列差分グラフ -->
        <matrix_difference>true</matrix_difference>
        <!-- アニメーション -->
        <segment_storage_animation>true</segment_storage_animation>
        <segment_storage_animation_fps>10</segment_storage_animation_fps>
        <trajectory_animation>true</trajectory_animation>
        <trajectory_animation_fps>10</trajectory_animation_fps>
        <!-- テキストサマリー -->
        <text_summary>true</text_summary>
    </outputs>
</analysis_config>
