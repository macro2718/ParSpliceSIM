<?xml version='1.0' encoding='utf-8'?>
<simulation_config>
    <!-- ParSpliceSIM シミュレーション設定ファイル -->
    
    <!-- 基本設定 -->
    <basic>
        <random_seed>42</random_seed>
        <!-- 再現可能な結果を得るためのランダムシード値 -->
        
        <system>
            <num_states>10</num_states>
            <!-- マルコフ状態の数 -->
            <self_loop_prob_mean>0.99</self_loop_prob_mean>
            <!-- 自己ループの平均確率 -->
        </system>
        
        <detailed_balance>
            <stationary_concentration>1.0</stationary_concentration>
            <!-- 定常分布生成時のディリクレ分布濃度パラメータ（大きいほど均等に近い） -->
            <connectivity>0.8</connectivity>
            <!-- 状態間接続性（0.0-1.0）、1.0で全状態が接続 -->
        </detailed_balance>
    </basic>
    
    <!-- 時間パラメータ -->
    <timing>
        <dephasing>
            <t_phase_mean>2.0</t_phase_mean>
            <!-- dephasing時間の平均値 -->
            <t_phase_constant_mode>true</t_phase_constant_mode>
            <!-- 定数モードの使用有無 -->
        </dephasing>
        
        <decorrelation>
            <t_corr_mean>2.0</t_corr_mean>
            <!-- decorrelation時間の平均値 -->
            <t_corr_constant_mode>true</t_corr_constant_mode>
            <!-- 定数モードの使用有無 -->
        </decorrelation>
    </timing>
    
    <!-- 並列実行設定 -->
    <parallel>
        <num_workers>10</num_workers>
        <!-- 使用するワーカープロセス数 -->
        <max_simulation_time>1000</max_simulation_time>
        <!-- シミュレーションの最大時間ステップ数 -->
        <initial_splicer_state>0</initial_splicer_state>
        <!-- SplicerとSchedulerの初期状態（0～num_states-1の範囲で指定） -->
    </parallel>
    
    <!-- スケジューリング戦略 -->
    <scheduling>
        <strategy>epsplice</strategy>
        <!-- 使用するスケジューリング戦略 -->
        <!-- 選択肢: parrep, csparsplice, parsplice, epsplice -->
        <strategy_params>
            <!-- 戦略固有のパラメータ -->
        </strategy_params>
    </scheduling>
    
    <!-- 出力・可視化設定 -->
    <output>
        <interval>1</interval>
        <!-- 出力間隔 -->
        <minimal_output>true</minimal_output>
        <!-- 詳細出力を抑制するフラグ -->
        <output_raw_data>true</output_raw_data>
        <!-- 生データ(JSON)を出力するか -->
        <output_visuals>false</output_visuals>
        <!-- 可視化（グラフ/アニメーション）を出力するか -->
        <compress_raw_data>true</compress_raw_data>
        <!-- 生データJSONをgzip圧縮して保存するか -->
        
        <visuals_mode>
            <graphs>true</graphs>
            <!-- グラフの生成可否 -->
            <animations>true</animations>
            <!-- アニメーションの生成可否 -->
            <segment_storage_animation>true</segment_storage_animation>
            <!-- セグメント貯蓄状況の動画化 -->
            <segment_storage_animation_fps>30</segment_storage_animation_fps>
            <!-- セグメント貯蓄アニメのfps（0以下で自動） -->
            <trajectory_animation>true</trajectory_animation>
            <!-- トラジェクトリの動画化 -->
            <trajectory_animation_fps>0</trajectory_animation_fps>
            <!-- トラジェクトリアニメのfps（0以下で自動） -->
        </visuals_mode>
    </output>
    
    <!-- トラジェクトリ設定 -->
    <trajectory>
        <max_trajectory_length>1000000</max_trajectory_length>
        <!-- トラジェクトリの最大長 -->
    </trajectory>
</simulation_config>
