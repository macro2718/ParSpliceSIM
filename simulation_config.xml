<?xml version='1.0' encoding='utf-8'?>
<simulation_config>
    <!-- ParSpliceSIM シミュレーション設定ファイル -->
    
    <!-- 基本設定 -->
    <basic>
        <!-- 再現可能な結果を得るためのランダムシード値 -->
        <random_seed>42</random_seed>
        
        <system>
            <!-- マルコフ状態の数 -->
            <num_states>10</num_states>
            <!-- 自己ループの平均確率 -->
            <self_loop_prob_mean>0.99</self_loop_prob_mean>
        </system>
        
        <detailed_balance>
            <!-- 定常分布生成時のディリクレ分布濃度パラメータ（大きいほど均等に近い） -->
            <stationary_concentration>1.0</stationary_concentration>
            <!-- 状態間接続性（0.0-1.0）、1.0で全状態が接続 -->
            <connectivity>0.8</connectivity>
        </detailed_balance>
    </basic>
    
    <!-- 時間パラメータ -->
    <timing>
        <dephasing>
            <!-- dephasing時間の平均値 -->
            <t_phase_mean>2.0</t_phase_mean>
            <!-- 定数モードの使用有無 -->
            <t_phase_constant_mode>true</t_phase_constant_mode>
        </dephasing>
        
        <decorrelation>
            <!-- decorrelation時間の平均値 -->
            <t_corr_mean>2.0</t_corr_mean>
            <!-- 定数モードの使用有無 -->
            <t_corr_constant_mode>true</t_corr_constant_mode>
        </decorrelation>
    </timing>
    
    <!-- 並列実行設定 -->
    <parallel>
        <!-- 使用するワーカープロセス数 -->
        <num_workers>10</num_workers>
        <!-- シミュレーションの最大時間ステップ数 -->
        <max_simulation_time>10</max_simulation_time>
        <!-- SplicerとSchedulerの初期状態（0～num_states-1の範囲で指定） -->
        <initial_splicer_state>0</initial_splicer_state>
    </parallel>
    
    <!-- スケジューリング戦略 -->
    <scheduling>
        <!-- 使用するスケジューリング戦略 -->
        <!-- 選択肢: parrep, csparsplice, parsplice, epsplice -->
        <strategy>parsplice</strategy>
        <!-- 戦略固有のパラメータ -->
        <strategy_params>
        </strategy_params>
    </scheduling>
    
    <!-- 出力・可視化設定 -->
    <output>
        <!-- 出力間隔 -->
        <interval>1</interval>
        <!-- 詳細出力を抑制するフラグ -->
        <minimal_output>true</minimal_output>
        <!-- 生データ(JSON)を出力するか -->
        <output_raw_data>true</output_raw_data>
        <!-- 可視化（グラフ/アニメーション）を出力するか -->
        <output_visuals>true</output_visuals>
        <!-- 生データJSONをgzip圧縮して保存するか -->
        <compress_raw_data>true</compress_raw_data>
        <stream_trajectory_only>true</stream_trajectory_only>
        
        <visuals_mode>
            <!-- グラフの生成可否 -->
            <graphs>true</graphs>
            <!-- アニメーションの生成可否 -->
            <animations>true</animations>
            <!-- 個別グラフの生成可否（必要に応じて切り替え） -->
            <graphs_detail>
                <trajectory_evolution>true</trajectory_evolution>
                <trajectory_efficiency>true</trajectory_efficiency>
                <total_value_per_worker>true</total_value_per_worker>
                <combined_value_efficiency>true</combined_value_efficiency>
                <total_value_moving_avg>true</total_value_moving_avg>
                <combined_moving_avg>true</combined_moving_avg>
                <matrix_difference>true</matrix_difference>
                <!-- 追加: 横軸対数スケールのグラフ出力可否 -->
                <trajectory_graph_logx>true</trajectory_graph_logx>
                <trajectory_efficiency_logx>true</trajectory_efficiency_logx>
                <trajectory_efficiency_logx_fit>true</trajectory_efficiency_logx_fit>
            </graphs_detail>
            <!-- セグメント貯蓄状況の動画化 -->
            <segment_storage_animation>true</segment_storage_animation>
            <!-- セグメント貯蓄アニメのfps（0以下で自動） -->
            <segment_storage_animation_fps>30</segment_storage_animation_fps>
            <!-- トラジェクトリの動画化 -->
            <trajectory_animation>true</trajectory_animation>
            <!-- トラジェクトリアニメのfps（0以下で自動） -->
            <trajectory_animation_fps>0</trajectory_animation_fps>
        </visuals_mode>
    </output>
    
    <!-- トラジェクトリ設定 -->
    <trajectory>
        <!-- トラジェクトリの最大長 -->
        <max_trajectory_length>1000000</max_trajectory_length>
    </trajectory>
</simulation_config>
